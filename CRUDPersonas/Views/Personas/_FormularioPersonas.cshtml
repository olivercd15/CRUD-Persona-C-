@{
}
@using Data;
@model Personas

<h2>Agregar persona</h2>

@using (Html.BeginForm("Create", "Personas", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.NombreCompleto)
        @Html.TextBoxFor(model => model.NombreCompleto, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Edad)
        @Html.TextBoxFor(model => model.Edad, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FechaNacimiento)
        @Html.TextBoxFor(model => model.FechaNacimiento, new { @class = "form-control", type = "date", max = DateTime.Now.ToString("yyyy-MM-dd") })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FechaInscripcion)
        @Html.TextBoxFor(model => model.FechaInscripcion, new { @class = "form-control", type = "date", max = DateTime.Now.ToString("yyyy-MM-dd") })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Costo)
        @Html.TextBoxFor(model => model.Costo, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Agregar</button>
}